<div class="patients-wrapper">
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <h3 class="sidebar-title">
                <i class="fas fa-user-shield"></i>
                Navigation
            </h3>
        </div>
        <nav class="sidebar-nav">
            <a asp-action="Employees" class="nav-item active">
                <i class="fas fa-users"></i>
                <span>Employees</span>
            </a>
            <a asp-action="Dashboard" class="nav-item">
                <i class="fas fa-home"></i>
                <span>Dashboard</span>
            </a>
        </nav>
    </div>

    <!-- Sidebar Toggle Button -->
    <button class="sidebar-toggle" id="sidebarToggle">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Sidebar Overlay -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <!-- Main Content -->
    <div class="main-content" id="mainContent">
        <!-- Main Content -->
        <div class="patients-content">
            <div class="patients-header">
                <div class="title-section">
                    <h1 class="page-title">
                        <i class="fas fa-users"></i>
                        Employee Management
                    </h1>
                    <p class="page-subtitle">Manage staff members and personnel records</p>
                </div>
            </div>

            <div class="container">
                <!-- Search Section -->
                <div class="search-section">
                    <form method="get" asp-action="Employees" class="search-form">
                        <div class="row mb-3 w-100">
                            <div class="col-md-6">
                                <input type="text"
                                       id="realTimeSearch"
                                       name="searchEmployee"
                                       class="form-control"
                                       placeholder="🔍 Search by name or email..."
                                       autocomplete="off" />
                            </div>
                            <div class="col-md-3">
                                <select name="roleFilter" class="form-control">
                                    <option value="">All Roles</option>
                                    <option value="Admin">Admin</option>
                                    <option value="Nurse">Nurse</option>
                                    <option value="Doctor">Doctor</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <select name="statusFilter" class="form-control">
                                    <option value="">All Status</option>
                                    <option value="active">Active</option>
                                    <option value="inactive">Inactive</option>
                                </select>
                            </div>
                        </div>
                    </form>
                </div>

                <!-- Employees Table -->
                <div class="patients-cards-container">
                    <div class="cards-header">
                        <h3>
                            <i class="fas fa-users"></i>
                            Employee Records
                            <small id="results-count" class="text-muted" style="font-size: 0.8rem; margin-left: 0.5rem;">
                                (@Model.Count() employees)
                            </small>
                        </h3>

                        <div class="header-right">
                            <div class="stat-badges">
                                <div class="stat-badge active">
                                    <i class="bi bi-check-circle-fill"></i>
                                    <span>Active: <strong>@Model.Count(e => e.IsActive)</strong></span>
                                </div>
                                <div class="stat-badge inactive">
                                    <i class="bi bi-x-circle-fill"></i>
                                    <span>Inactive: <strong>@Model.Count(e => !e.IsActive)</strong></span>
                                </div>
                            </div>
                            <a asp-action="AddEmployee" class="btn btn-primary add-btn">
                                <i class="fas fa-user-plus"></i>
                                <span>Add Employee</span>
                            </a>
                        </div>
                    </div>

                    <div class="table-container" id="searchResults">
                        <table class="patients-table">
                            <thead>
                                <tr>
                                    <th>
                                        <span class="th-content">
                                            <i class="fas fa-user"></i>
                                            Name & Surname
                                        </span>
                                    </th>
                                    <th>
                                        <span class="th-content">
                                            <i class="fas fa-envelope"></i>
                                            Email
