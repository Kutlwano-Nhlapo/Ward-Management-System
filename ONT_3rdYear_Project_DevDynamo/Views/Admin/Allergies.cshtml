@model IEnumerable<ONT_3rdyear_Project.Models.Allergy>
@{
    ViewData["Title"] = "Allergies";
}

<div class="container my-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-heart-pulse"></i> Allergies</h4>
        </div>
        <div class="card-body">
            <a asp-action="AddAllergy" class="btn btn-success mb-3">
                <i class="bi bi-plus-circle"></i> Add Allergy
            </a>

            <table class="table table-bordered table-striped">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th style="width:180px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var allergy in Model)
                    {
                        <tr>
                            <td>@allergy.Name</td>
                            <td>@allergy.Description</td>
                            <td>
                                <a asp-action="EditAllergy" asp-route-id="@allergy.AllergyId"
                                   class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-action="DeleteAllergy" asp-route-id="@allergy.AllergyId"
                                   class="btn btn-danger btn-sm"
                                   onclick="return confirm('Are you sure you want to delete this allergy?');">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
