@model IEnumerable<ONT_3rdyear_Project.Models.Medication>
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@{
    ViewData["Title"] = "Medications";
    var user = await UserManager.GetUserAsync(User);
    var roles = await UserManager.GetRolesAsync(user);

    var today = DateOnly.FromDateTime(DateTime.Now);
    var threeMonthsFromNow = today.AddMonths(3);
    var medications = Model.ToList();
    var inStockCount = medications.Count(m => m.Quantity > 0);
    var lowStockCount = medications.Count(m => m.Quantity <= 20 && m.Quantity > 0);
    var expiringCount = medications.Count(m => m.ExpiryDate <= threeMonthsFromNow);
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
