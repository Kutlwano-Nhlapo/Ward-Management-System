<div class="patients-wrapper">
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <h3 class="sidebar-title">
                <i class="fas fa-pills"></i>
                Navigation
            </h3>
        </div>
        <nav class="sidebar-nav">
            <a asp-action="Medications" class="nav-item active">
                <i class="fas fa-capsules"></i>
                <span>Medications</span>
            </a>
            <a asp-action="Orders" class="nav-item">
                <i class="fas fa-shopping-cart"></i>
                <span>Orders</span>
            </a>
            <a asp-action="Dashboard" class="nav-item">
                <i class="fas fa-home"></i>
                <span>Dashboard</span>
            </a>
        </nav>
    </div>

    <!-- Sidebar Toggle Button -->
    <button class="sidebar-toggle" id="sidebarToggle">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Sidebar Overlay -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <!-- Main Content -->
    <div class="main-content" id="mainContent">
        <div class="patients-content">
            <div class="patients-header">
                <div class="title-section">
                    <h1 class="page-title">
                        <i class="fas fa-capsules"></i>
                        Medication Inventory
                    </h1>
                    <p class="page-subtitle">Manage pharmaceutical inventory and medication tracking</p>
                </div>
            </div>

            <div class="container">
                <!-- Statistics Cards -->
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-icon total">
                            <i class="bi bi-boxes"></i>
                        </div>
                        <div class="stat-content">
                            <div class="stat-value">@medications.Count</div>
                            <div class="stat-label">Total Medications</div>
                        </div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon stock">
                            <i class="bi bi-check-circle"></i>
                        </div>
                        <div class="stat-content">
                            <div class="stat-value">@inStockCount</div>
                            <div class="stat-label">In Stock</div>
                        </div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon low">
                            <i class="bi bi-exclamation-triangle"></i>
                        </div>
                        <div class="stat-content">
                            <div class="stat-value">@lowStockCount</div>
                            <div class="stat-label">Low Stock</div>
                        </div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon expiring">
                            <i class="bi bi-clock-history"></i>
                        </div>
                        <div class="stat-content">
                            <div class="stat-value">@expiringCount</div>
                            <div class="stat-label">Expiring Soon</div>
                        </div>
                    </div>
                </div>

                <!-- Search Section -->
                <div class="search-section">
                    <div class="search-form">
                        <div class="search-box">
                            <i class="bi bi-search"></i>
                            <input type="text" id="searchInput" placeholder="Search medications..." />
                        </div>
                        <div class="col-md-3">
                            <select name="scheduleFilter" id="scheduleFilter" class="form-control">
                                <option value="">All Schedules</option>
                                <option value="Schedule 1">Schedule 1</option>
                                <option value="Schedule 2">Schedule 2</option>
                                <option value="Schedule 3">Schedule 3</option>
                                <option value="Schedule 4">Schedule 4</option>
                                <option value="Schedule 5">Schedule 5</option>
                                <option value="Schedule 6">Schedule 6</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select name="stockFilter" id="stockFilter" class="form-control">
                                <option value="">All Stock Levels</option>
                                <option value="instock">In Stock</option>
                                <option value="lowstock">Low Stock</option>
                                <option value="outofstock">Out of Stock</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <select name="expiryFilter" id="expiryFilter" class="form-control">
                                <option value="">All</option>
                                <option value="expiring">Expiring Soon</option>
                                <option value="expired">Expired</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Medications Table -->
                <div class="patients-cards-container">
                    <div class="cards-header">
                        <h3>
                            <i class="fas fa-list"></i>
                            Medication Records
                            <small id="results-count" class="text-muted" style="font-size: 0.8rem; margin-left: 0.5rem;">
                                (@Model.Count() medications)
                            </small>
                        </h3>

                        <div class="header-right">
                            <a asp-action="CreateMedication" class="btn btn-primary add-btn">
                                <i class="fas fa-plus"></i>
                                <span>Add Medication</span>
                            </a>
                        </div>
                    </div>

                    <div class="table-container" id="searchResults">
                        <table class="patients-table">
                            <thead>
                                <tr>
                                    <th>
                                        <span class="th-content">
                                            <i class="fas fa-capsules"></i>
                                            Medication Name
                                        </span>
                                    </th>
                                    <th>
                                        <span class="th-content">
                                            <i class="fas fa-calendar-alt"></i>
                                            Schedule
                                        </span>
                                    </th>
                                    <th>
                                        <span class="th-content">
                                            <i class="fas fa-boxes"></i>
                                            Quantity
                                        </span>
                                    </th>
                                    <th>
                                        <span class="th-content">
                                            <i class="fas fa-calendar-times"></i>
                                            Expiry Date
                                        </span>
                                    </th>
                                    <th class="text-center">
                                        <span class="th-content">
                                            <i class="fas fa-cog"></i>
                                            Actions
                                        </span>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var med in medications)
                                {
                                    var isExpiring = med.ExpiryDate <= threeMonthsFromNow;
                                    var isExpired = med.ExpiryDate <= today;
                                    var isLowStock = med.Quantity <= 50 && med.Quantity > 0;
                                    var isOutOfStock = med.Quantity == 0;

                                    <tr class="patient-row medication-row @(isExpired ? "expired-row" : "") @(isOutOfStock ? "out-of-stock-row" : "")"
                                        data-schedule="@med.Schedule"
                                        data-quantity="@med.Quantity"
                                        data-expiry="@med.ExpiryDate.ToString("yyyy-MM-dd")"
                                        data-is-expiring="@isExpiring.ToString().ToLower()"
                                        data-is-expired="@isExpired.ToString().ToLower()"
                                        data-is-low-stock="@isLowStock.ToString().ToLower()"
                                        data-is-out-of-stock="@isOutOfStock.ToString().ToLower()">
                                        <td>
                                            <div class="patient-info">
                                                <div class="medication-icon">
                                                    <i class="fas fa-pills"></i>
                                                </div>
                                                <div class="patient-details">
                                                    <div class="patient-name">
                                                        @med.Name
                                                        @if (isExpired)
                                                        {
                                                            <span class="alert-badge expired">
                                                                <i class="bi bi-x-circle"></i> Expired
                                                            </span>
                                                        }
                                                        else if (isExpiring)
                                                        {
                                                            <span class="alert-badge expiring">
                                                                <i class="bi bi-exclamation-circle"></i> Expiring Soon
                                                            </span>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="schedule-badge">
                                                <i class="bi bi-calendar-check"></i>
                                                @med.Schedule
                                            </span>
                                        </td>
                                        <td>
                                            @if (isOutOfStock)
                                            {
                                                <span class="quantity-badge out-of-stock">
                                                    <i class="bi bi-x-circle-fill"></i>
                                                    Out of Stock
                                                </span>
                                            }
                                            else if (isLowStock)
                                            {
                                                <span class="quantity-badge low-stock">
                                                    <i class="bi bi-exclamation-triangle-fill"></i>
                                                    @med.Quantity units
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="quantity-badge in-stock">
                                                    <i class="bi bi-check-circle-fill"></i>
                                                    @med.Quantity units
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            <div class="expiry-date @(isExpired ? "expired" : isExpiring ? "expiring" : "")">
                                                <i class="bi bi-calendar3"></i>
                                                @med.ExpiryDate.ToString("MMM dd, yyyy")
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <div class="action-buttons">
                                                <a asp-action="EditMedication" asp-route-id="@med.MedicationId"
                                                   class="action-btn edit-btn"
                                                   title="Edit Medication">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a href="javascript:void(0);"
                                                   class="action-btn delete-btn"
                                                   data-bs-toggle="modal"
                                                   data-bs-target="#deleteModal"
                                                   data-id="@med.MedicationId"
                                                   data-name="@med.Name"
                                                   title="Delete Medication">
                                                    <i class="fas fa-trash-alt"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="fas fa-exclamation-triangle text-danger"></i>
                    Confirm Delete
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete medication <strong id="deleteMedicationName"></strong>? This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i>
                    Cancel
                </button>
                <button type="button" id="confirmDeleteBtn" class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i>
                    Delete
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    // Sidebar functionality
    const sidebar = document.getElementById('sidebar');
    const sidebarToggle = document.getElementById('sidebarToggle');
    const sidebarOverlay = document.getElementById('sidebarOverlay');
    const mainContent = document.getElementById('mainContent');

    sidebarToggle.addEventListener('click', function() {
        sidebar.classList.toggle('open');
        sidebarOverlay.classList.toggle('show');
        sidebarToggle.classList.toggle('open');

        if (window.innerWidth > 768) {
            mainContent.classList.toggle('sidebar-open');
        }
    });

    sidebarOverlay.addEventListener('click', function() {
        sidebar.classList.remove('open');
        sidebarOverlay.classList.remove('show');
        sidebarToggle.classList.remove('open');
        mainContent.classList.remove('sidebar-open');
    });

    window.addEventListener('resize', function() {
        if (window.innerWidth <= 768) {
            mainContent.classList.remove('sidebar-open');
        }
    });

    // Delete functionality
    document.addEventListener('DOMContentLoaded', function() {
        let deleteMedicationId = null;
        let deleteRow = null;

        const deleteModal = document.getElementById('deleteModal');
        const confirmDeleteBtn = document.getElementById('confirmDeleteBtn');

        if (deleteModal) {
            deleteModal.addEventListener('show.bs.modal', function(event) {
                const button = event.relatedTarget;
                deleteMedicationId = button.getAttribute('data-id');
                const medicationName = button.getAttribute('data-name');

                document.getElementById('deleteMedicationName').textContent = medicationName;
                deleteRow = button.closest('tr');
            });

            confirmDeleteBtn.addEventListener('click', function() {
                if (!deleteMedicationId) return;

                fetch(`/Pharmacist/DeleteMedication/${deleteMedicationId}`, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                    }
                })
                .then(response => {
                    if (response.ok) {
                        if (deleteRow){
                            deleteRow.remove();
                        }
                        const modalInstance = bootstrap.Modal.getInstance(deleteModal);
                        modalInstance.hide();

                        Swal.fire({
                            icon: 'success',
                            title: 'Deleted!',
                            text: 'Medication successfully deleted.',
                            timer: 2000,
                            showConfirmButton: false
                        });
                    } else {
                        throw new Error('Delete failed');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Failed to delete medication.'
                    });
                });
            });
        }
    });

    // Search and filter functionality
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('searchInput');
        const scheduleFilter = document.getElementById('scheduleFilter');
        const stockFilter = document.getElementById('stockFilter');
        const expiryFilter = document.getElementById('expiryFilter');
        const rows = document.querySelectorAll('.medication-row');

        function performFilter() {
            const searchTerm = searchInput ? searchInput.value.toLowerCase() : '';
            const scheduleValue = scheduleFilter ? scheduleFilter.value : '';
            const stockValue = stockFilter ? stockFilter.value : '';
            const expiryValue = expiryFilter ? expiryFilter.value : '';
            const today = new Date().toISOString().split('T')[0];
            const threeMonthsFromNow = new Date();
            threeMonthsFromNow.setMonth(threeMonthsFromNow.getMonth() + 3);
            const threeMonthsFromNowStr = threeMonthsFromNow.toISOString().split('T')[0];

            let visibleCount = 0;

            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                const schedule = row.getAttribute('data-schedule');
                const quantity = parseInt(row.getAttribute('data-quantity'));
                const expiryDate = row.getAttribute('data-expiry');
                const isExpired = row.getAttribute('data-is-expired') === 'true';
                const isExpiring = row.getAttribute('data-is-expiring') === 'true';
                const isLowStock = row.getAttribute('data-is-low-stock') === 'true';
                const isOutOfStock = row.getAttribute('data-is-out-of-stock') === 'true';

                // Text search
                const matchesSearch = searchTerm === '' || text.includes(searchTerm);

                // Schedule filter
                const matchesSchedule = scheduleValue === '' || schedule === scheduleValue;

                // Stock filter
                let matchesStock = true;
                if (stockValue === 'instock') {
                    matchesStock = quantity > 0 && !isLowStock;
                } else if (stockValue === 'lowstock') {
                    matchesStock = isLowStock;
                } else if (stockValue === 'outofstock') {
                    matchesStock = isOutOfStock;
                }

                // Expiry filter
                let matchesExpiry = true;
                if (expiryValue === 'expiring') {
                    matchesExpiry = isExpiring && !isExpired;
                } else if (expiryValue === 'expired') {
                    matchesExpiry = isExpired;
                }

                // Show/hide based on all filters
                if (matchesSearch && matchesSchedule && matchesStock && matchesExpiry) {
                    row.style.display = '';
                    visibleCount++;
                } else {
                    row.style.display = 'none';
                }
            });

            // Update results count
            const resultsCount = document.getElementById('results-count');
            if (resultsCount) {
                resultsCount.textContent = `(${visibleCount} medications)`;
            }
        }

        // Event listeners for all filters
        if (searchInput) {
            searchInput.addEventListener('input', performFilter);
        }
        if (scheduleFilter) {
            scheduleFilter.addEventListener('change', performFilter);
        }
        if (stockFilter) {
            stockFilter.addEventListener('change', performFilter);
        }
        if (expiryFilter) {
            expiryFilter.addEventListener('change', performFilter);
        }

        // Add animation on load
        rows.forEach((row, index) => {
            row.style.animationDelay = `${index * 0.05}s`;
        });
    });
</script>