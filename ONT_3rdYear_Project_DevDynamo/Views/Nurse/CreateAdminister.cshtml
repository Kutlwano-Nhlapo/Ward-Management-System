                    <div class="form-group-custom">
                        <label asp-for="AdministeredDate" class="form-label-custom required-field">
                            <i class="fas fa-calendar-alt"></i>
                            Administration Date
                        </label>
                        <div class="date-input-wrapper">
                            <input asp-for="AdministeredDate" type="datetime-local"
                                   class="form-control-custom date-input" required />
                        </div>
                        <span asp-validation-for="AdministeredDate" class="text-danger"></span>
                    </div>

                    <!-- Action Buttons -->
                    <div class="action-buttons">
                        @* <button type="submit" class="btn btn-save" id="submitButton">
                            <i class="fas fa-check-circle"></i>
                            Administer & Record
                        </button> *@
