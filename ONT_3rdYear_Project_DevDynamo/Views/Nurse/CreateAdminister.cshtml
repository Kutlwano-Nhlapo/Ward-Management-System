@section Scripts {
    <script>
        document.getElementById("medicationSelect").addEventListener("change", function () {
            const selectedOption = this.options[this.selectedIndex];
            const schedule = selectedOption.getAttribute("data-schedule");

            if (schedule && parseInt(schedule) > 4) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Restricted Medication',
                    html: `
                        <div style="text-align: left;">
                            <p style="margin-bottom: 1rem;"><strong>Schedule ${schedule} Medication Detected</strong></p>
                            <div style="background: #fff3cd; border-left: 4px solid #ffc107; padding: 0.75rem; margin: 1rem 0;">
                                <i class="fas fa-exclamation-triangle" style="color: #856404; margin-right: 8px;"></i>
                                <strong>Nurse Administration Restriction</strong>
                            </div>
                            <p style="margin: 1rem 0;">You cannot administer medication with a schedule higher than 4.</p>
                            <ul style="text-align: left; margin: 1rem 0; padding-left: 1.5rem;">
                                <li>Schedule 1-4: Nurse can administer</li>
                                <li>Schedule 5-6: Requires sister authorization</li>
                            </ul>
                        </div>
                    `,
                    confirmButtonColor: '#0077be',
                    confirmButtonText: 'Understood',
                    customClass: {
                        popup: 'sweet-alert-custom',
                        title: 'sweet-alert-title',
                        htmlContainer: 'sweet-alert-content'
                    },
                    willOpen: () => {
                        medicationSelect.value = "";
                    }
                });
            }
        });

        var patientAllergies = @Html.Raw(Json.Serialize(ViewBag.PatientAllergies ?? new List<string>()));
        var medicationSelect = document.getElementById("medicationSelect");
        var saveButton = document.getElementById("saveButton"); 

        function checkAllergy() {
            var selectedMedication = medicationSelect.options[medicationSelect.selectedIndex].text || "";
            var hasAllergyConflict = patientAllergies.some(a => selectedMedication.toLowerCase().includes(a.toLowerCase()));

            if (hasAllergyConflict) {
                saveButton.disabled = true;
                saveButton.classList.add("btn-disabled");
            } else {
                saveButton.disabled = false;
                saveButton.classList.remove("btn-disabled");
            }
        }

        medicationSelect.addEventListener("change", checkAllergy);
        checkAllergy();
    </script>

