        <div class="floating-element"></div>
    </div>
    
    <!-- Header Section -->
    <div class="patients-header">
       
                <div class="title-section">
                    <h1 class="page-title">
                        <i class="fas fa-pills"></i>
                        Administer Medication
                    </h1>
                    <p class="page-subtitle">Record medication administration safely and accurately</p>
                </div>
            
    </div>

    <!-- Main Content -->
    <div class="patients-content">
        <div class="container">
            <!-- Patient Info Card -->
            <div class="patient-info-card">
                <h3>
                    <i class="fas fa-user-circle"></i>
                    Administering medication to: @ViewBag.PatientName
                </h3>
            </div>

            <!-- Medication Form Card -->
            <div class="medication-form-card">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <p>@error.ErrorMessage</p>
                        }
                    </div>
                }

                <!-- Allergy Warning -->
                @if (ViewBag.PatientAllergies != null && ((List<string>)ViewBag.PatientAllergies).Count > 0)
                {
                    <div class="safety-warning">
                        <h4><i class="fas fa-exclamation-triangle" style="margin-right:8px;"></i>Allergy Warning!</h4>
                        <p>Patient has the following allergies:</p>
                        <ul>
                            @foreach (var allergy in (List<string>)ViewBag.PatientAllergies)
                            {
                                <li>@allergy</li>
                            }
                        </ul>
                    </div>
                }

                <!-- Medication Form -->
                <form id="medicationForm" asp-action="CreateAdminister" method="post">
                    <input type="hidden" asp-for="PatientId" value="@ViewBag.PatientId" />
                    <input type="hidden" asp-for="ApplicationUserID" value="@UserManager.GetUserId(User)" />

                    <!-- Patient Name (Read-only) -->
                    <div class="form-group-custom">
                        <label class="form-label-custom">
                            <i class="fas fa-user"></i>
                            Patient
                        </label>
                        <input type="text" class="form-control-custom" value="@ViewBag.PatientName" readonly />
                    </div>

                    <!-- Medication Selection -->
                    <div class="form-group-custom">
                        <label asp-for="MedicationId" class="form-label-custom required-field">
                            <i class="fas fa-pills"></i>
                            Medication
                        </label>
                        <div class="select-wrapper">
                            <select asp-for="MedicationId" class="form-control-custom" id="medicationSelect" required>
                                <option value="">-- Select Medication --</option>
                                @foreach (var med in ViewBag.MedicationList)
                                {
                                    <option value="@med.MedicationId" data-schedule="@med.Schedule">
                                        @med.Name (Schedule @med.Schedule)
                                    </option>
                                }
                            </select>
                        </div>
                        <span asp-validation-for="MedicationId" class="text-danger"></span>
                    </div>

                    <!-- Dosage -->
                    <div class="form-group-custom">
                        <label asp-for="Dosage" class="form-label-custom required-field">
                            <i class="fas fa-prescription-bottle"></i>
                            Dosage
