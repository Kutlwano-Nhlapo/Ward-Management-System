    <!-- Add Bootstrap JS and confirmation modal script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Confirmation Modal Functionality - FIXED COMMENT
        document.addEventListener('DOMContentLoaded', function () {
            const saveButton = document.getElementById('saveButton');
            const confirmSaveButton = document.getElementById('confirmSave');
            const medicationForm = document.getElementById('medicationForm');

            // Check if modal element exists
            const modalElement = document.getElementById('confirmationModal');
            if (!modalElement) {
                console.error('Confirmation modal element not found!');
                return;
            }

            const confirmationModal = new bootstrap.Modal(modalElement);

            // Save button click handler
            saveButton.addEventListener('click', function (e) {
                e.preventDefault();

                // Check if button is disabled due to allergies
                if (saveButton.disabled) {
                    Swal.fire({
                        title: 'Allergy Conflict',
                        text: 'Cannot administer medication due to patient allergies.',
                        icon: 'error',
                        confirmButtonColor: '#3085d6'
                    });
                    return;
                }

                // Manually validate each field
                let allValid = true;

                // Clear previous validation messages
                document.querySelectorAll('.text-danger').forEach(span => {
                    span.style.display = 'none';
                });

                // Validate Medication
                const medicationSelect = document.getElementById('medicationSelect');
                if (!medicationSelect.value) {
                    allValid = false;
                    const validationSpan = medicationSelect.closest('.form-group-custom').querySelector('.text-danger');
                    if (validationSpan) {
                        validationSpan.style.display = 'flex';
                    }
                }

                // Validate Dosage
                const dosageInput = document.querySelector('input[name="Dosage"]');
                if (!dosageInput.value.trim()) {
                    allValid = false;
                    const validationSpan = dosageInput.closest('.form-group-custom').querySelector('.text-danger');
                    if (validationSpan) {
                        validationSpan.style.display = 'flex';
                    }
                }

                // Validate Administered Date
                const administeredDateInput = document.querySelector('input[name="AdministeredDate"]');
                if (!administeredDateInput.value.trim()) {
                    allValid = false;
                    const validationSpan = administeredDateInput.closest('.form-group-custom').querySelector('.text-danger');
                    if (validationSpan) {
                        validationSpan.style.display = 'flex';
                    }
                }

                if (!allValid) {
                    // Show error message for incomplete form
                    Swal.fire({
                        title: 'Incomplete Form',
                        text: 'Please fill in all required fields with valid data.',
                        icon: 'warning',
                        confirmButtonColor: '#3085d6'
                    });
                    return;
                }

                // If all valid, populate modal with data and show it
                populateModalWithData();
                confirmationModal.show();
            });

            // Confirm save button handler
            confirmSaveButton.addEventListener('click', function () {
                // Submit the form
                medicationForm.submit();
            });

            // Populate modal with form data
            function populateModalWithData() {
                const medicationSelect = document.getElementById('medicationSelect');
                const medicationName = medicationSelect.options[medicationSelect.selectedIndex].text;
                const dosage = document.querySelector('input[name="Dosage"]').value;
                const administeredDate = document.querySelector('input[name="AdministeredDate"]').value;

                document.getElementById('modalMedication').textContent = medicationName;
                document.getElementById('modalDosage').textContent = dosage ;
                document.getElementById('modalAdministeredDate').textContent = new Date(administeredDate).toLocaleString();
            }

            // Hide validation messages when user starts typing
            document.querySelectorAll('input, select').forEach(input => {
                input.addEventListener('input', function () {
                    const validationSpan = this.closest('.form-group-custom')?.querySelector('.text-danger');
                    if (validationSpan && this.value.trim()) {
                        validationSpan.style.display = 'none';
                    }
                });
            });
        });
    </script>
