                        <input type="hidden" asp-for="PatientID" />

                        <!-- Message/Note -->
                        <div class="form-group-custom">
                            <label class="form-label-custom required-field" for="Message">
                                <i class="fas fa-comment-medical"></i>
                                Message or Note to Doctor
                            </label>
                            <textarea asp-for="Message"
                                      class="form-control"
                                      rows="5"
                                      placeholder="Please describe the patient's condition, any concerns, or specific questions you have. Include relevant details such as vital signs, symptoms, medication responses, or changes in patient status..."
                                      required></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>

                        <!-- Action Buttons -->
                        <div class="action-buttons">
                           @*  <button type="submit" class="btn btn-primary">
                                <i class="fas fa-paper-plane"></i>
                                Send Request
                            </button> *@
                            <button type="button" id="saveButton" class="btn btn-primary">
                                <i class="fas fa-paper-plane"></i>
                                Send Request
                            </button>
                            <a href="@(Url.Action("PatientsList", roles.Contains("Nurse") ? "Nurse" : "NurseSister"))"
                               class="btn btn-secondary cancel-btn">
                                <i class="fas fa-arrow-left"></i>
                                Back to Instructions
                            </a>
                        </div>
