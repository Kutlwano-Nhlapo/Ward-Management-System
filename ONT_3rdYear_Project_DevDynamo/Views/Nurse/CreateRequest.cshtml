        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

        .patient-label i {
            color: var(--primary-blue);
            font-size: 0.9rem;
        }

    .patient-name {
        font-size: 1.4rem;
        color: var(--text-primary);
        font-weight: 700;
        margin: 0;
    }

    /* Info Box */
    .info-box {
        background: var(--primary-light);
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        box-shadow: var(--shadow-light);
        border: 1px solid var(--border-color);
        display: flex;
        align-items: flex-start;
        gap: 1rem;
    }

        .info-box i {
            color: var(--primary-blue);
            font-size: 1.2rem;
            margin-top: 0.125rem;
            flex-shrink: 0;
        }

        .info-box .info-content h4 {
            color: var(--text-primary);
            margin: 0 0 0.5rem 0;
            font-size: 1rem;
            font-weight: 600;
        }

        .info-box .info-content p {
            color: var(--text-secondary);
            margin: 0;
            font-size: 0.9rem;
            line-height: 1.5;
        }

    /* Form Groups */
    .form-group-custom {
        margin-bottom: 1.5rem;
    }

    .form-label-custom {
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

        .form-label-custom i {
            color: var(--primary-blue);
            font-size: 0.9rem;
            width: 16px;
            text-align: center;
        }

    .required-field::after {
        content: " *";
        color: var(--danger-red);
        font-weight: bold;
    }

    .form-control, .form-select {
        padding: 0.75rem 1rem;
        border: 2px solid var(--border-color);
        border-radius: 12px;
        font-size: 1rem;
        transition: all 0.2s ease;
        background: var(--bg-card);
        width: 100%;
    }

