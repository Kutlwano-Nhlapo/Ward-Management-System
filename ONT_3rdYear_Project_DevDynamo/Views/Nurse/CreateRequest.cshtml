        padding: 1.5rem;
        box-shadow: var(--shadow-light);
        border: 1px solid var(--border-color);
        overflow: hidden;
        display: flex;
        flex-direction: column;
        max-width: 1000px;
        margin-left: auto;
        margin-right: auto;
    }

    .cards-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid var(--border-color);
        margin-bottom: 1.5rem;
        flex-shrink: 0;
    }

        .cards-header h3 {
            margin: 0;
            color: var(--text-primary);
            font-weight: 600;
            font-size: 1.25rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
