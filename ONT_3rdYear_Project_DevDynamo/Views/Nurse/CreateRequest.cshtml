                </div>
            </div>
        </div>
    </div>
</div>

<!-- Confirmation Modal -->
<div class="modal fade confirmation-modal" id="confirmationModal" tabindex="-1" aria-labelledby="confirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmationModalLabel">
                    <i class="fas fa-paper-plane me-2"></i>
                    Confirm Instruction Request
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Please review your instruction request before sending:</p>

                <div class="vital-details">
                    <div class="vital-detail-item">
                        <span class="vital-detail-label">Patient:</span>
                        <span class="vital-detail-value" id="modalPatientName">@Model.PatientName</span>
                    </div>
                    <div class="vital-detail-item">
                        <span class="vital-detail-label">Message:</span>
                        <span class="vital-detail-value" id="modalMessage"></span>
                    </div>
                </div>

                <p class="mt-3"><strong>Are you sure you want to send this instruction request to the doctor?</strong></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-cancel" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>No, Go Back
                </button>
                <button type="button" class="btn btn-confirm" id="confirmSave">
                    <i class="fas fa-check me-2"></i>Yes, Send Request
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>

        // Cancel button confirmation
        document.querySelectorAll('.cancel-btn').forEach(btn => {
            btn.addEventListener('click', function (e) {
                const message = document.querySelector('textarea[name="Message"]').value.trim();

                if (message) {
                    e.preventDefault();

                    Swal.fire({
                        title: 'Discard changes?',
                        text: "Any unsaved data will be lost.",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Yes, go back',
                        cancelButtonText: 'Stay here'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            window.location.href = this.getAttribute('href');
                        }
                    });
                }
            });
        });

        // Auto-resize textarea
        const textarea = document.querySelector('textarea[name="Message"]');
        if (textarea) {
            textarea.addEventListener('input', function() {
                this.style.height = 'auto';
                this.style.height = Math.max(this.scrollHeight, 120) + 'px';
            });

            // Trigger initial resize
            textarea.style.height = Math.max(textarea.scrollHeight, 120) + 'px';
        }

        // Form validation enhancement
        const form = document.querySelector('form');
        if (form) {
            form.addEventListener('submit', function(e) {
                const message = document.querySelector('textarea[name="Message"]').value.trim();
                if (!message) {
                    e.preventDefault();
                    Swal.fire({
                        icon: 'warning',
                        title: 'Message Required',
                        text: 'Please provide a message to the doctor.',
                        confirmButtonColor: '#0077be'
                    });
                }
            });
        }


                // Confirmation Modal Functionality - ADD ONLY THIS PART
        document.addEventListener('DOMContentLoaded', function () {
            const saveButton = document.getElementById('saveButton');
            const confirmSaveButton = document.getElementById('confirmSave');
            const instructionForm = document.getElementById('instructionForm');
            const confirmationModal = new bootstrap.Modal(document.getElementById('confirmationModal'));

            // Save button click handler
            saveButton.addEventListener('click', function (e) {
                e.preventDefault();

                // Manually validate the message field
                let allValid = true;

                // Clear previous validation messages
                document.querySelectorAll('.text-danger').forEach(span => {
                    span.style.display = 'none';
                });

                // Validate Message
                const messageInput = document.querySelector('textarea[name="Message"]');
                if (!messageInput.value.trim()) {
                    allValid = false;
                    const validationSpan = messageInput.closest('.form-group-custom').querySelector('.text-danger');
                    if (validationSpan) {
                        validationSpan.style.display = 'flex';
                    }
                }

                if (!allValid) {
                    // Show error message for incomplete form
                    Swal.fire({
                        title: 'Message Required',
                        text: 'Please provide a message to the doctor before sending the request.',
                        icon: 'warning',
                        confirmButtonColor: '#3085d6'
                    });
                    return;
                }

                // If valid, populate modal with data and show it
                populateModalWithData();
                confirmationModal.show();
            });

            // Confirm save button handler
            confirmSaveButton.addEventListener('click', function () {
                // Submit the form
                instructionForm.submit();
            });

            // Populate modal with form data
            function populateModalWithData() {
                const message = document.querySelector('textarea[name="Message"]').value;

                // Truncate long messages for display
                const displayMessage = message.length > 200 ?
                    message.substring(0, 200) + '...' :
                    message;

                document.getElementById('modalMessage').textContent = displayMessage || 'No message provided';
            }

            // Hide validation message when user starts typing
            const messageInput = document.querySelector('textarea[name="Message"]');
            if (messageInput) {
                messageInput.addEventListener('input', function () {
                    const validationSpan = this.closest('.form-group-custom')?.querySelector('.text-danger');
                    if (validationSpan && this.value.trim()) {
                        validationSpan.style.display = 'none';
                    }
                });
            }
        });
    </script>
