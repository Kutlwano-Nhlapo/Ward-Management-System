                            Medical Instructions
                        </h3>
                    </div>

                    <!-- Replace the entire commented out read-status section with this active code -->
                    <div class="advice-content">
                        @if (isNurse && hasActualAdvice)
                        {
                            <div class="read-status">
                                <div>
                                    @if (Model.IsRead)
                                    {
                                        <span class="status-indicator status-read">
                                            <i class="fas fa-check-circle"></i>
                                            <span>Read</span>
                                        </span>
                                        <div class="read-timestamp">
                                            <i class="fas fa-clock"></i>
                                            Read on: @Model.ReadAt?.ToString("MMM dd, yyyy hh:mm tt")
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="status-indicator status-unread">
                                            <i class="fas fa-circle"></i>
                                            <span>Unread</span>
                                            <span class="new-advice-badge">NEW</span>
                                        </span>
                                        <div class="read-timestamp" style="display: none;">
                                            <i class="fas fa-clock"></i>
                                            Read on: <span id="timestampValue"></span>
                                        </div>
                                    }
                                </div>

