                                </p>
                            }
                            else
                            {
                                <p class="advice-text">
                                    @Model.Instructions
                                </p>
                            }
                        </div>
                    </div>

                       

                        <!-- Action Section -->
                        <div class="action-section">
                            <a asp-controller="@(roles.Contains("Nurse") ? "Nurse" : "NurseSister")" asp-action="PatientsList" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i>
                                Back to Instructions List
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
               document.addEventListener('DOMContentLoaded', function() {
            const markAsReadBtn = document.getElementById('markAsReadBtn');

            if (markAsReadBtn) {
                markAsReadBtn.addEventListener('click', function() {
                    // Get the current patient ID from the model
                    const patientId = @Model.PatientID;

                    // Send AJAX request to mark as read
                    fetch('/Nurse/MarkAdviceAsRead', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ patientId: patientId })
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            // Update UI to show read status
                            const statusIndicator = document.querySelector('.status-indicator');
                            const newAdviceBadge = document.querySelector('.new-advice-badge');
                            const readTimestamp = document.querySelector('.read-timestamp');

                            // Change to read styling
                            statusIndicator.className = 'status-indicator status-read';
                            statusIndicator.innerHTML = '<i class="fas fa-check-circle"></i><span>Read</span>';

                            // Remove NEW badge
                            if (newAdviceBadge) {
                                newAdviceBadge.style.display = 'none';
                            }

                            // Show timestamp with current time
                            const now = new Date();
                            const timestampValue = document.getElementById('timestampValue');
                            if (timestampValue) {
                                timestampValue.textContent = now.toLocaleString();
                            }
                            if (readTimestamp) {
                                readTimestamp.style.display = 'block';
                            }

                            // Disable the button
                            markAsReadBtn.className = 'btn btn-secondary';
                            markAsReadBtn.innerHTML = '<i class="fas fa-check-double"></i><span>Already Read</span>';
                            markAsReadBtn.disabled = true;

                            // Optional: Show success message
                            console.log('Advice marked as read successfully');
                        }
                    })
                    .catch(error => {
                        console.error('Error marking as read:', error);
                    });
                });
            }
        });
    </script>
}