@model IEnumerable<ONT_3rdyear_Project.ViewModels.WardConsumableViewModel>
@{
    ViewData["Title"] = "Full Inventory";
    var GroupByWard = Model.GroupBy(x => x.WardName);
}
<head>
 <link href="/css/Script&Consumable/Consumable.css" rel="stylesheet" />
</head>
<div class="dashboard-wrapper">

    <div class="container">       
            <div class="page-header">
                    <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                        <h1><i class="bi bi-clipboard-check"></i>Stock Management</h1>   
                        <div class="btn-group gap-2">                       
                                <a asp-controller="Consumable" asp-action="Dashboard" class="btn back-button mt-2 text-nowrap">Back</a>
                        </div>          
                    </div>
            </div>
        <form asp-action="SearchConsumablesInWard" method="get" class="mb-3 d-flex justify-content-start">
             <div class="btn-group">
            <input type="text" name="searchString"           
                placeholder="Search wards..." 
                class="form-control d-inline-block" />
            <button type="submit" class="btn primary-btn">Search</button>
            </div>
        </form>
    
        <div class="">
            @foreach (var WardGroup in GroupByWard)
            {
                    
                            <div class="form-section row mb-4">
                                <div class="col-md-12 ">
                                 <div class="d-flex justify-content-between align-items-center mb-4">
                                    <h5 class="ward-title"><i class="bi bi-hospital me-1"></i> @WardGroup.Key</h5>
                                     <div class="btn-group" role="group">
                                            <a asp-controller="Consumable" asp-action="OrderConsumables" class="btn success-btn margin-right-lg "><i class="bi bi-clipboard-plus"></i>New Order</a> 
                                            <button class="btn primary-btn openAddConsumableBtn" data-ward-id="@WardGroup.First().WardID" data-ward-name="@WardGroup.Key">Add Consumable</button>
                                        </div>  
                                        </div>    
                                    <div class="table-responsive">
                                        <table class="table table-sm table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>Consumable Name</th>
                                                    <th>Category</th>
                                                    <th>System Quantity</th>
                                                    <th>Quantity Available</th>
                                                    <th>Discrepancy</th>
                                                    <th>Last Updated</th>
                                                </tr>
                                            </thead>
                                            <tbody>                                   
                                                    @foreach (var item in WardGroup)
                                                    {
                                                        <tr>
                                                            <td>@item.ConsumableName</td>
                                                            <td>@item.Category</td>
                                                            <td>@item.SystemQuantity</td>
                                                            <td class="@(item.QuantityCounted < 5 ? "status-badge-sm status-rejected fs-6" : "")">
                                                                @item.QuantityCounted
                                                            </td>
                                                            <td class="@(item.Discrepancy < 5 ? "status-badge-sm status-rejected fs-6 " : "")">
                                                                @item.Discrepancy
                                                            </td>
                                                            <td>
                                                                @item.LastUpdated.ToString("yyyy-MM-dd")
                                                                @if ((DateTime.Now - item.LastUpdated).TotalDays > 7)
                                                                {
                                                                    <span class="status-badge-sm status-pending">Needs update</span>
                                                                }
                                                            </td>
                                                        </tr>
                                                    } 
                                            </tbody>                                           
                                        </table>
                                    </div>
                                </div>                              
                            </div>
                                          
             
                     <div id="modalContainer"></div>
            }
            </div>           
          </div>  
       </div>
 </div>   

        @section Scripts {
                <partial name="_ValidationScriptsPartial" />
                <script>
                    document.addEventListener("DOMContentLoaded", function () {
                        const modalContainer = document.getElementById("modalContainer");

                        document.querySelectorAll(".openAddConsumableBtn").forEach(button => {
                            button.addEventListener("click", function () {
                                const wardId = this.getAttribute("data-ward-id");
                                const wardName = this.getAttribute("data-ward-name");

                                // Optional: pass wardId to your action
                                fetch(`@Url.Action("AddConsumableToWard", "Consumable")?wardId=${wardId}`)
                                    .then(response => response.text())
                                    .then(html => {
                                        modalContainer.innerHTML = html;

                                        const addConsumableToWardModal = new bootstrap.Modal(
                                            document.getElementById('addConsumableToWardModal')
                                        );
                                        addConsumableToWardModal.show();
                                    });
                            });
                        });
                    });
                    
                </script>

    }
  

