@model IEnumerable<ONT_3rdyear_Project.Models.Order>

@{
    ViewData["Title"] = "Order History";
}

 <link href="/css/Script&Consumable/Consumable.css" rel="stylesheet" />
<div class="dashboard-wrapper">
    <div class="container">
         <div class="page-header">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">           
                <h1><i class="bi bi-clock-history"></i>Order History</h1>                
                <div class="d-flex gap-2">  
                        <div class="btn-group gap-2"> 
                        @if (User.Identity.IsAuthenticated && User.IsInRole("ConsumableManager"))
                        {
                            <a asp-controller="Consumable" asp-action="Dashboard" class="back-button">
                                <i class="bi bi-arrow-left"></i>
                                Back
                            </a>
                        }
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {    
                        <a asp-controller="Consumable" asp-action="Dashboard" class="back-button">
                                <i class="bi bi-arrow-left"></i>
                                Back
                            </a>
                        }                  
                    
                    </div>                 
                        
                </div>
            </div>
        </div>
      
@if (Model.Any())
{
     <div class="orders-table-wrapper">           
                <div class="table-responsive">
                    <table class="table orders-table mb-0">    
                    <thead>
                        <tr>
                            <th>Ward</th>
                            <th>Date</th>
                            <th>Requested By</th>
                            <th>Consumables</th>
                            <th>Supplier</th>
                            <th>Remarks</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                    
                        @foreach (var req in Model)
                        {
                        
                            <tr>  
                            
                                <td>@req.Ward.Name</td>
                                <td>@req.OrderDate.ToShortDateString()</td>
                                <td>@req.User.FullName</td>
                                <td>
                                    <ul class="mb-0 list-unstyled ps-3">
                                        
                                        @foreach (var item in req.ConsumableOrders)
                                        {
                                            @if ( @req.Status == "Delivered")
                                                {
                                                <li class="mb-2">
                                                        <strong class="consumable-name">@item.Consumable?.Name</strong>
                                                         <span class="consumable-qty "><i class="bi bi-box-seam me-1 text-dark"> <small>Requested: @item.QuantityRequested</small></i> Approved: @(item.QuantityApproved)<i class="bi bi-arrow-down-short"></i></span>
                                            
                                                    </li>
                                                }
                                            else if ( @req.Status == "Rejected")
                                                {
                                                    <li class="mb-2">
                                                        <strong class="consumable-name">@item.Consumable?.Name</strong>    
                                                    </li>
                                                }
                                            else 
                                                {
                                                    <li class="mb-2">
                                                        <strong class="consumable-name">@item.Consumable?.Name</strong>
                                                         <span class="consumable-qty "><i class="bi bi-box-seam me-1 text-dark"> <small>Requested: @item.QuantityRequested</small></i></span>
                                                    </li>
                                                }
                                        }
                                    </ul>
                                </td>
                                <td>
                                    @if (req.Supplier != null)
                                    {
                                        @req.Supplier.SupplierName
                                    }
                                    else
                                    {
                                        <em>No supplier assigned</em>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(req.Remark))
                                    {
                                        @req.Remark
                                    }
                                    else
                                    {
                                        <em>No remarks</em>
                                    }
                                </td>
                                
                                <td>                   
                                <div class="col-4 content-center text-center">
                                                        <small>
                                                        @if ( @req.Status == "Delivered")
                                                            {
                                                                <span class="status-badge status-delivered"> @req.Status</span>
                                                            }
                                                            else if ( @req.Status == "Approved")
                                                            {
                                                                <span class="status-badge status-approved"> @req.Status</span>
                                                            }
                                                            else if ( @req.Status == "Rejected")
                                                            {
                                                                <span class="status-badge status-rejected"> @req.Status</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="status-badge status-pending"> @req.Status</span>
                                                            }
                                                        </small>
                                                    </div>
                                </td>
                            
                            
                            </tr>
                        }
                    </tbody>
            </table>
        </div>
    </div>   
}
else
{
    <p>No approved requests yet.</p>
}
 </div>
</div>
