@model ONT_3rdyear_Project.Controllers.ConsumableController
@using ONT_3rdyear_Project.ViewModels
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Dashboard";
    var requestsP = ViewBag.FinalOrders as List<Order>;
    var requestsA = ViewBag.ProcessOrders as List<Order>;
    var LowStock = ViewBag.LowStockItems as List<WardConsumableViewModel>;
}

<head>
    <title>@ViewData["Title"] - ONT_3rdyear_Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/_PatientMovementLayout.css" />
    <link rel="stylesheet" href="~/ONT_3rdyear_Project.styles.css" asp-append-version="true" />
    <!-- Font Awesome for medical icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>    

    <link href="/css/Script&Consumable/Consumable.css" rel="stylesheet" />
</head>

<div class="dashboard-wrapper">
    <div class="container">
        <!-- Dashboard Header -->
      
        <div class="page-header">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <h1>
                    <i class="bi bi-clipboard-check"></i>
                    Consumable Management Dashboard
                </h1>   
                <h4> Welcome,<strong> @((await UserManager.GetUserAsync(User))?.FullName)</strong></h4>           
            </div>
        </div>
       
        <!-- Stats Cards -->
        <div class="stats-grid">
            <div class="stat-card critical">
                <div class="stat-header">
                    <div class="stat-icon critical">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <div class="stat-label">Critical Stock</div>
                </div>
                <div class="stat-value">@ViewBag.CriticalStock</div>
                <div class="stat-description">Items below minimum level</div>
            </div>

            <div class="stat-card warning">
                <div class="stat-header">
                    <div class="stat-icon warning">
                        <i class="fas fa-exclamation"></i>
                    </div>
                    <div class="stat-label">Low Stock</div>
                </div>
                <div class="stat-value">@ViewBag.LowStock</div>
                <div class="stat-description">Items approaching minimum</div>
            </div>

            <div class="stat-card info">
                <div class="stat-header">
                    <div class="stat-icon info">
                        <i class="fas fa-truck"></i>
                    </div>
                    <div class="stat-label">Pending Orders</div>
                </div>
                <div class="stat-value">@ViewBag.PendingOrders</div>
                <div class="stat-description">Orders awaiting delivery</div>
            </div>

            <div class="stat-card success">
                <div class="stat-header">
                    <div class="stat-icon success">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="stat-label">Total Items</div>
                </div>
                <div class="stat-value">@ViewBag.TotalConsumables</div>
                <div class="stat-description">Consumables managed</div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="actions-card">
            <div class="card-header-custom">
                <h2 class="card-title-custom">Quick Actions</h2>
            </div>
            <div class="card-body-custom">
                <div class="actions-grid">
                     <a asp-controller="Consumable" asp-action="WardConsumables" class="action-btn primary">
                        <i class="fas fa-boxes"></i> Stock Management
                    </a>
                    <a asp-controller="Consumable" asp-action="StockTake" class="action-btn primary"><i class="bi bi-clipboard-check"></i>New Stock Take</a>
                    <a asp-controller="Consumable" asp-action="OrderConsumables" class="action-btn success"><i class="bi bi-clipboard-plus"></i>New Order</a>
                    <a asp-controller="Consumable" asp-action="ApprovedOrders" class="primary-btn">
                        <i class="fas fa-arrow-down"></i> Receive Delivery
                    </a>
                   
                    <a asp-controller="Consumable" asp-action="ListOfOrders" class="primary-btn">
                        <i class="fas fa-clipboard-list"></i> View Requests
                    </a>
                    <a asp-controller="Consumable" asp-action="Index" class="primary-btn">
                        <i class="fas fa-pills"></i> Consumables
                    </a>
                    <a asp-controller="Consumable" asp-action="Wards" class="primary-btn">
                        <i class="fas fa-hospital"></i> Wards
                    </a>
                    <a asp-action="FullInventory" class="primary-btn">
                        <i class="fas fa-chart-bar"></i> Full Inventory
                    </a>
                    <a asp-action="OrderHistory" class="primary-btn">
                        <i class="fas fa-history"></i> Order History
                    </a>
                    <a asp-controller="Consumable" asp-action="GenerateReports" class="primary-btn">
                        <i class="fas fa-file-alt"></i> Generate Reports
                    </a>
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="activity-grid">
         <!-- Critical Stock  -->
           
                <div class="activity-card low-stock">
                    <div class="card-header-custom">
                        <h2 class="card-title-custom">Low Stock</h2>
                    </div>
                    @if (LowStock != null && LowStock.Any())
                    {
                        <div>
                           @foreach (var item in LowStock.OrderBy(x => x.QuantityCounted))
                            {   
                            <a asp-action="OrderConsumables" class="text-decoration-none">                            
                                <div class="activity-item">
                                    <div class="activity-row">
                                        <span class="activity-ward">@item.WardName</span>
                                        <span class="activity-date">@item.ConsumableName</span>
                                        <span class="activity-status">
                                            @if(item.QuantityCounted <= 10)
                                            {
                                              <span class="status-badge-sm status-pending">Low: @item.QuantityCounted</span> 
                                            }
                                            else if(item.QuantityCounted > 10 && item.QuantityCounted <= 50)
                                            {
                                                 <span class="status-badge-sm status-rejected">Critical: @item.QuantityCounted</span> 
                                            }
                                            else
                                            {
                                                <span class="status-badge-sm status-info">Sufficient: @item.QuantityCounted</span>
                                            }                                                                                       
                                        </span>
                                    </div>
                                </div> 
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <div class="empty-state-icon">📦</div>
                            <p class="empty-state-text">No Low stock</p>
                        </div>
                    }
                </div>
           
            <!-- Recent Stock Movements -->
          
                <div class="activity-card">
                    <div class="card-header-custom">
                        <h2 class="card-title-custom">Recent Stock Movements</h2>
                    </div>
                    @if (requestsP != null && requestsP.Any())
                    {
                        <div>
                            @foreach (var c in requestsP)
                            {
                              <a asp-action="OrderHistory" class="text-decoration-none">
                                <div class="activity-item">
                                    <div class="activity-row">
                                        <span class="activity-ward">@c.Ward.Name</span>
                                        <span class="activity-date">@c.OrderDate.ToString("MMM dd, yyyy")</span>
                                        <span class="activity-status">
                                            @if (c.Status == "Delivered")
                                            {
                                                <span class="status-badge-sm status-delivered">@c.Status</span>
                                            }
                                            else if (c.Status == "Rejected")
                                            {
                                                <span class="status-badge-sm status-rejected">@c.Status</span>
                                            }
                                            else
                                            {
                                                <span class="status-badge-sm status-pending">@c.Status</span>
                                            }
                                        </span>
                                    </div>
                                </div>  
                             </a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <div class="empty-state-icon">📦</div>
                            <p class="empty-state-text">No recent stock movements</p>
                        </div>
                    }
                </div>
          

            <!-- Upcoming Deliveries -->
            
                <div class="activity-card delivery">
                    <div class="card-header-custom">
                        <h2 class="card-title-custom">Upcoming Deliveries</h2>
                    </div>
                    @if (requestsA != null && requestsA.Any())
                    {
                        <div>
                            @foreach (var stock in requestsA)
                            {     <a asp-action="@(stock.Status == "Approved" ? "ApprovedOrders" : "ListOfOrders" )" class="text-decoration-none">                          
                                <div class="activity-item">
                                    <div class="activity-row">
                                        <span class="activity-ward">@stock.Ward?.Name</span>
                                        <span class="activity-date">@stock.OrderDate.ToString("MMM dd, yyyy")</span>
                                        <span class="activity-status">
                                            @if (stock.Status == "Approved")
                                            {
                                                <span class="status-badge-sm status-approved">@stock.Status</span>
                                            }
                                            else if (stock.Status == "Rejected")
                                            {
                                                <span class="status-badge-sm status-rejected">@stock.Status</span>
                                            }
                                            else
                                            {
                                                <span class="status-badge-sm status-pending">@stock.Status</span>
                                            }
                                        </span>
                                    </div>
                                    <ul class="delivery-details">
                                        @foreach (var item in stock.ConsumableOrders)
                                        {
                                            <li>
                                                <span class="item-name">@item.Consumable?.Name</span>
                                                <span class="item-quantity">
                                                    (Ordered: @item.QuantityRequested, Approved: @item.QuantityApproved)
                                                </span>
                                            </li>
                                        }
                                    </ul>
                                </div></a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <div class="empty-state-icon">🚚</div>
                            <p class="empty-state-text">No upcoming deliveries scheduled</p>
                        </div>
                    }
                </div>
            
        </div>
    </div>
</div>