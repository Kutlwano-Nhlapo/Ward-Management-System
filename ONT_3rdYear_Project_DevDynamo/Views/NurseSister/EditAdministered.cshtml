@section Scripts {
    <script>

        let isInitializing = true;
        function updateSchedule(select) {
            const selected = select.options[select.selectedIndex];
            const schedule = parseInt(selected.text.match(/Schedule (\d+)/)?.[1] || 0);
            const requiresPrescription = schedule > 4;
            const dosageInput = document.getElementById('Dosage');

            document.getElementById('RequiresPrescription').value = requiresPrescription;
            document.getElementById('prescriptionField').style.display = requiresPrescription ? 'block' : 'none';

            if (requiresPrescription) {
                const patientId = @Model.PatientId;
                const medicationId = select.value;

                // Only fetch if a medication is selected
                if (medicationId) {
                    fetch(`/NurseSister/GetPrescriptions?patientId=${patientId}&medicationId=${medicationId}`)
                        .then(response => {
                            if (!response.ok) throw new Error('Network response was not ok');
                            return response.json();
                        })
                        .then(data => {
                            const prescriptionSelect = document.getElementById('PrescriptionId');
                            if (prescriptionSelect) {
                                // Save the current selection
                                const currentSelection = prescriptionSelect.value;

                                // Clear existing options but keep the first one
                                const firstOption = prescriptionSelect.options[0];
                                prescriptionSelect.innerHTML = '';
                                if (firstOption) {
                                    prescriptionSelect.appendChild(firstOption);
                                }

                                // Add new options from the fetched data
                                data.forEach(p => {
                                    const opt = document.createElement('option');
                                    opt.value = p.prescriptionId;
                                    opt.text = "Prescription #" + p.prescriptionId;
                                    opt.setAttribute('data-dosage', p.dosage || '');
                                    prescriptionSelect.appendChild(opt);
                                });

                                // Restore previous selection if it still exists, or auto-select if only one
                                if (currentSelection && Array.from(prescriptionSelect.options).some(opt => opt.value === currentSelection)) {
                                    prescriptionSelect.value = currentSelection;
                                } else if (data.length === 1) {
                                    prescriptionSelect.value = data[0].prescriptionId;
                                    // Auto-fill dosage if available
                                    if (data[0].dosage && dosageInput) {
                                        dosageInput.value = data[0].dosage;
                                        showToast(`Dosage auto-filled from prescription: ${data[0].dosage}`);
                                    }
                                }
                            }
                        })
                        .catch(err => {
                            console.error("Error loading prescriptions:", err);
                            // If fetch fails, keep the existing options
                        });
                }
            } else {
                // Clear dosage if prescription not required
                if (dosageInput && !isInitializing) {
                    dosageInput.value = '';
            }
        }

        // Add event listener for prescription selection changes
        document.addEventListener('DOMContentLoaded', function() {
            const prescriptionSelect = document.getElementById('PrescriptionId');
            const dosageInput = document.getElementById('Dosage');

            if (prescriptionSelect && dosageInput) {
                prescriptionSelect.addEventListener('change', function() {
                    if (isInitializing) return;
                    const selectedOption = this.options[this.selectedIndex];
                    const dosage = selectedOption.getAttribute('data-dosage');
                    if (dosage) {
                        dosageInput.value = dosage;
                        showToast(`Dosage auto-filled from prescription: ${dosage}`);
                    }
                });
            }
        });

        // Toast notification function
        function showToast(message) {
            // Create toast element
            var toast = document.createElement('div');
            toast.className = 'toast-message';
            toast.innerHTML = `<i class="fas fa-check-circle"></i><span>${message}</span>`;
            document.body.appendChild(toast);

            // Animate and remove after 3 seconds
            setTimeout(function() {
                toast.style.opacity = '1';
                setTimeout(function() {
                    toast.style.opacity = '0';
                    setTimeout(function() {
                        if (document.body.contains(toast)) {
                            document.body.removeChild(toast);
                        }
                    }, 500);
                }, 2500);
            }, 100);
        }

               window.onload = function () {
            const select = document.getElementById("MedicationId");
            const dosageInput = document.getElementById('Dosage');

            if (select) {
                // Initialize the form based on current medication
                updateSchedule(select);
            }

            // Set dosage from model data immediately
            const currentDosage = '@Model.Dosage';
            if (currentDosage && dosageInput && !dosageInput.value) {
                dosageInput.value = currentDosage;
            }

            // Auto-fill dosage from existing prescription if available (after delay)
            setTimeout(() => {
                const currentPrescriptionId = '@Model.PrescriptionId';
                if (currentPrescriptionId && dosageInput) {
                    const prescriptionSelect = document.getElementById('PrescriptionId');
                    if (prescriptionSelect) {
                        const currentOption = Array.from(prescriptionSelect.options).find(opt => opt.value === currentPrescriptionId);
                        if (currentOption) {
                            const dosage = currentOption.getAttribute('data-dosage');
                            if (dosage && !dosageInput.value) {
                                dosageInput.value = dosage;
                            }
                        }
                    }
                }

                // Final fallback to model dosage
                if (currentDosage && dosageInput && (!dosageInput.value || dosageInput.value === '')) {
                    dosageInput.value = currentDosage;
                }

                // Mark initialization as complete
                isInitializing = false;
            }, 1000);
        };
    </script>

    <script>
