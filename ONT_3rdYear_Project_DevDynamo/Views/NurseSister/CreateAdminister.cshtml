                                if (dosage) {
                                    dosageInput.value = dosage;
                                    showToast(`Dosage auto-filled from prescription: ${dosage}`);
                                    document.getElementById('dosageAutoFillMessage').style.display = 'block';
                                }
                            });
                        }
                    })
                    .catch(err => {
                        console.error("Error loading prescriptions:", err);
                        prescriptionField.innerHTML = `
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle"></i>
                                <span>Error loading prescriptions. Please try again.</span>
                            </div>`;
                    });
