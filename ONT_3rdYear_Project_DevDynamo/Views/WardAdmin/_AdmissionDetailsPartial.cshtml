@model ONT_3rdyear_Project.Models.Admission
<div>
	<strong>Patient Name:</strong> @Model.Patient?.FirstName @Model.Patient?.LastName <br />
    <strong>Ward:</strong> @Model.Ward?.Name <br />
    <strong>Bed:</strong> @Model.Bed?.BedNo <br />
    <strong>Doctor:</strong> @Model.ApplicationUser?.FullName <br />
	<strong>Reason for Admission:</strong> @Model.ReasonForAdmission <br />
    <strong>Date:</strong> @Model.AdmissionDate.ToString("dd MMM yyyy")
	<a href="@Url.Action("Discharge", "WardAdmin", new { id = Model.AdmissionID })" class="btn btn-danger">Discharge Patient</a>
</div>
